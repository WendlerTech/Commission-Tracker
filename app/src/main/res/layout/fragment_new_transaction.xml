<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/frameLayout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:focusable="true"
     android:focusableInTouchMode="true"
     tools:context=".NewTransaction"
     tools:layout_editor_absoluteY="81dp">

     <TextView
         android:id="@+id/lblHum"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:ellipsize="end"
         android:singleLine="false"
         android:text="Hum+ or Palm"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="@+id/txtEditHum"
         app:layout_constraintStart_toStartOf="@+id/txtEditHum"
         app:layout_constraintTop_toBottomOf="@+id/txtEditHum" />

  <EditText
      android:id="@+id/txtEditHum"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="12dp"
      android:layout_marginStart="33dp"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:hint="0"
      android:importantForAutofill="no"
      android:inputType="number"
      android:nextFocusDown="@id/txtConnectedDev"
      app:layout_constraintEnd_toStartOf="@+id/txtConnectedDev"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblTablets" />

  <EditText
      android:id="@+id/txtEditTablets"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="33dp"
      android:layout_marginStart="33dp"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:hint="0"
      android:importantForAutofill="no"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblUpgPhones" />

  <EditText
      android:id="@+id/txtEditNewPhones"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="12dp"
      android:layout_marginStart="33dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="0"
      android:importantForAutofill="no"
      android:inputType="number"
      android:nextFocusDown="@id/txtEditUpgPhones"
      app:layout_constraintEnd_toStartOf="@+id/txtEditUpgPhones"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

  <EditText
      android:id="@+id/txtEditUpgPhones"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="33dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="0"
      android:importantForAutofill="no"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/txtEditNewPhones"
      app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

     <TextView
         android:id="@+id/lblNewPhones"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:ellipsize="end"
         android:singleLine="false"
         android:text="New Phones"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="@+id/txtEditNewPhones"
         app:layout_constraintStart_toStartOf="@+id/txtEditNewPhones"
         app:layout_constraintTop_toBottomOf="@+id/txtEditNewPhones" />

     <TextView
         android:id="@+id/lblTitle"
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="10dp"
         android:layout_marginEnd="8dp"
         android:text="New Transaction"
         android:textAlignment="center"
         android:textAppearance="@android:style/TextAppearance.Material.Large"
         app:autoSizeMaxTextSize="112sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/lblUpgPhones"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="4dp"
         android:ellipsize="end"
         android:singleLine="false"
         android:text="Upgrade Phones"
         android:textAlignment="textStart"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="@+id/txtEditUpgPhones"
         app:layout_constraintTop_toBottomOf="@+id/txtEditUpgPhones" />

     <TextView
         android:id="@+id/lblTablets"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="1dp"
         android:layout_marginEnd="1dp"
         android:text="Tablets, Jetpacks, Home Phones or HumX"
         android:textAlignment="center"
         android:textColor="#616A6B"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/txtEditTablets" />

  <EditText
      android:id="@+id/txtConnectedDev"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="33dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:hint="0"
      android:importantForAutofill="no"
      android:inputType="number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/txtEditHum"
      app:layout_constraintTop_toBottomOf="@+id/lblTablets" />

     <TextView
         android:id="@+id/lblConnectedDev"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="1dp"
         android:ellipsize="end"
         android:singleLine="false"
         android:text="Connected Devices"
         android:textAlignment="textStart"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="@+id/txtConnectedDev"
         app:layout_constraintTop_toBottomOf="@+id/txtConnectedDev" />

     <EditText
         android:id="@+id/txtEditTMP"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="33dp"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="0"
         android:importantForAutofill="no"
         android:inputType="number"
         app:layout_constraintEnd_toEndOf="@+id/txtEditHum"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/lblHum" />

     <CheckBox
         android:id="@+id/chkMultiTMP"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="19dp"
         android:layout_marginEnd="4dp"
         android:text="Multi-Device TMP"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:layout_constraintBottom_toBottomOf="@+id/txtEditTMP"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@+id/txtEditTMP" />

  <EditText
      android:id="@+id/txtRevenue"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginEnd="33dp"
      android:layout_marginStart="33dp"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:hint="0.00"
      android:imeOptions="actionDone"
      android:importantForAutofill="no"
      android:inputType="numberDecimal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblTMP" />

     <TextView
         android:id="@+id/lblBucketLabel"
         android:layout_width="0dp"
         android:layout_height="25dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="20dp"
         android:layout_marginEnd="8dp"
         android:text="Total toward bucket this transaction:"
         android:textAlignment="center"
         android:textAppearance="@android:style/TextAppearance.Material.Medium"
         android:textColor="@android:color/black"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/lblRevenue" />

     <TextView
         android:id="@+id/lblTMP"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:ellipsize="end"
         android:singleLine="false"
         android:text="New TMP"
         android:textColor="#616A6B"
         android:textSize="14sp"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="@+id/txtEditTMP"
         app:layout_constraintStart_toStartOf="@+id/txtEditTMP"
         app:layout_constraintTop_toBottomOf="@+id/txtEditTMP" />

     <TextView
         android:id="@+id/lblRevenue"
         android:layout_width="0dp"
         android:layout_height="19dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp"
         android:text="Total Revenue"
         android:textAlignment="center"
         android:textColor="#616A6B"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/txtRevenue" />

     <TextView
         android:id="@+id/lblTotalBucket"
         android:layout_width="0dp"
         android:layout_height="25dp"
         android:layout_marginStart="8dp"
         android:layout_marginTop="8dp"
         android:layout_marginEnd="8dp"
         android:text="$0.00"
         android:textAlignment="center"
         android:textAppearance="@android:style/TextAppearance.Material.Medium"
         android:textColor="@android:color/holo_green_dark"
         app:autoSizeMaxTextSize="100sp"
         app:autoSizeMinTextSize="14sp"
         app:autoSizeStepGranularity="1px"
         app:autoSizeTextType="uniform"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/lblBucketLabel" />

  <Button
      android:id="@+id/btnSubmit"
      android:layout_width="wrap_content"
      android:layout_height="41dp"
      android:layout_marginTop="10dp"
      android:paddingTop="8dp"
      android:text="Submit Transaction"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lblTotalBucket" />

 </android.support.constraint.ConstraintLayout>
</ScrollView>